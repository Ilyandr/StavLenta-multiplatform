<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="colorAccent">@color/gray</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorOnSurface">@color/gray</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light">
    </style>

    <style name="BasicLayoutTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="startIconTint">@color/primary</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">16dp</item>
        <item name="singleLine">true</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_heavy</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="fontFamily">@font/sf_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>